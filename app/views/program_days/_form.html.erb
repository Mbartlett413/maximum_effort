
<%= simple_form_for(@program_day) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :program_week %>

    <%= f.input :dummy_workout_id, :collection => @program_workouts, :label_method => :title, :value_method => :id %> 
    <%= f.input :active_day %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>




<h1>Modify Workout</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <td>Exercise</td>
      <td>Modify</td>
      <td>Rep</td>
      <td>Modify</td>
    </tr>
  </thead>
  <tbody>
  <% @program_day.dummy_workout.dummy_workout_collections.each do |dwc| %>
  <tr>
    <td><%= dwc.exercise_id %></td>
    <td><%= link_to 'mod exercise', edit_dummy_workout_collection_path(@program_day.dummy_workout.id) %></td>
    <td><%= dwc.dummy_repetition_id %></td>
    <td><%= link_to 'mod rep', edit_dummy_repetition_path(dwc.dummy_repetition_id) %></td>
  </tr>
    
  <% end %> 
  </tbody>
</table>



