<p id="notice"><%= notice %></p>

<h1>Program Days</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Program week</th>
      <th>Active day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @program_days.each do |program_day| %>
      <tr>
        <td><%= program_day.title %></td>
        <td><%= program_day.program_week.title %></td>
        <td><%= program_day.active_day %></td>
        <td><%= link_to 'Show', program_day %></td>
        <td><%= link_to 'Edit', edit_program_day_path(program_day) %></td>
        <td><%= link_to 'Destroy', program_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Program Day', new_program_day_path %>
