<div class="container">
  <div class="row">
    <div class="col">
      
        <%= simple_form_for(@muscle_group) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :muscle_title %>
            <%= f.input :region_id, :collection => @regions, :label_method => :title, :value_method => :id %>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>

    </div>
  </div>
</div>